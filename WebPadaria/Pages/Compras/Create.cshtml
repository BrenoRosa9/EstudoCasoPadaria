@model WebPadaria.Pages.Compras.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Compra.Cliente_Id" class="control-label"></label>
                <select asp-for="Compra.Cliente_Id" class="form-control" asp-items="Model.Clientes"></select>
                <span asp-validation-for="Compra.Cliente_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Compra.Produto_Id" class="control-label"></label>
                <select asp-for="Compra.Produto_Id" class="form-control" asp-items="Model.Produtos"></select>
                <span asp-validation-for="Compra.Produto_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Compra.Quantidade" class="control-label"></label>
                <input asp-for="Compra.Quantidade" class="form-control" />
                <span asp-validation-for="Compra.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

